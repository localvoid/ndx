{
  "name": "ndx",
  "version": "1.0.2",
  "sideEffects": false,
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "es2015": "dist/es2015/index.js",
  "typings": "dist/typings/index.d.ts",
  "description": "Lightweight full-text searching and indexing library.",
  "scripts": {
    "prepublishOnly": "npm run clean && npm run dist",
    "clean": "rm -rf ./dist",
    "dist": "yarn dist:main && yarn dist:module && yarn dist:es2015",
    "dist:es2015": "tsc --project ./tsconfig.build.es2015.json",
    "dist:module": "tsc --project ./tsconfig.build.module.json",
    "dist:main": "tsc --project ./tsconfig.build.main.json",
    "lint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "files": [
    "dist",
    "src",
    "!src/**/__tests__",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.21",
    "codecov": "^3.1.0",
    "husky": "^1.3.1",
    "jest": "^29.3.1",
    "ndx-dev-commons": "^1.0.0",
    "ts-jest": "^23.10.5",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "license": "MIT",
  "author": {
    "name": "Boris Kaul",
    "email": "localvoid@gmail.com",
    "url": "https://github.com/localvoid"
  },
  "keywords": [
    "text",
    "full-text",
    "index",
    "search",
    "relevance"
  ],
  "homepage": "https://github.com/ndx-search/ndx",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndx-search/ndx"
  },
  "bugs": {
    "url": "https://github.com/ndx-search/ndx/issues"
  },
  "github": "https://github.com/ndx-search/ndx"
}
